<%- include("partials/header.ejs") %>

<div class="wrapper">
    <div class="reference">
        <a href="/#books-section">Books / </a><span><%= book.title %></span>
    </div>
    <div class="title">
        <h1><%= book.title %></h1>
        <p>by <%= book.author %></p>
    </div>
    <img id="cover" src="<%= book.cover_url === "UNDEFINED" ? '/images/404.png' : book.cover_url %>"
                    alt="Book Cover">
    <form id="editBook" class="grid-container" action="/books/<%= book.id %>" method="post">
        <div>
            <dt>ISBN</dt>
            <dd><%= book.isbn %></dd>
        </div>
        <hr class="divider"/>
        <div>
            <dt>Publish Year</dt>
            <dd><%= book.publish_year %></dd>
        </div>
        <hr class="divider" />
        <div>
            <dt>Description</dt>
            <dd><%= book.description %></dd>
        </div>
        <hr class="divider" />
        <div>
            <dt>Review</dt>
            <dd><textarea name="review" readonly required><%= book.review %></textarea>
        </dd>
        </div>
        <hr class="divider" />
        <div>
            <dt>Rating</dt>
            <dd><input id="book-rating" type="number" name="rating" value="<%= book.rating %>" step="any" min="0" max="10" readonly required></dd>
        </div>
        <hr class="divider" />
        <div>
            <dt>Created At</dt>
            <dd>
                <time datetime="<%= book.created_at %>"><%= book.created_at.split(',')[0] %></time>
            </dd>
        </div>
        <hr class="divider" />
        <div>
            <dt>Last Edited</dt>
            <dd>
                <% if (book.updated_at) { const displayDate=book.updated_at.split(',')[0]; %>
                    <time datetime="<%= book.updated_at %>">
                        <%= displayDate %>
                    </time>
                    <% } %>
            </dd>
        </div>
    </form>
    <div id="buttons">
        <button>Edit</button>
        <a href="/books/delete/<%= book.id %>" id="delete" class="danger">Delete</a>
        <button id="save" hidden type="submit" form="editBook">Save</button>
        <button class="danger" hidden>Cancel</button>
    </div>
        <div id="notes-section">
            <h2>Notes</h2>
            <select class="sort">
                <option value="0" selected>
                    Note Number
                </option>
                <option value="1">
                    Page Number
                </option>
            </select>
            <ul id="notes"> 
                <% if (locals.notes) { %>
                    <% for (let index = 1; index <= notes.length; index++) { %>
                        <li>
                            <form class="note" action="/books/<%= book.id %>/notes/<%= notes[index - 1].id %>/edit" method="post">
                            <div class="note-details">
                                <p>Note <%= index %></p>
                                <textarea class="note-content" name="content" required readonly><%= notes[index - 1].content %></textarea>
                                <p>Page <%= notes[index - 1].page_number %></p>
                            </div>
                            <div class="note-actions">
                                <button type="button"><svg xmlns="http://www.w3.org/2000/svg" fill="black" class="bi bi-pencil" viewBox="0 0 16 16">
                                        <path
                                            d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                                    </svg></button>
                                <a href="/books/<%= book.id %>/notes/<%= notes[index - 1].id %>/delete"><svg xmlns="http://www.w3.org/2000/svg" fill="red"
                                        class="bi bi-trash" viewBox="0 0 16 16">
                                        <path
                                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                        <path
                                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                    </svg></a>
                                <button type="submit" hidden><span style="font-size: clamp(1.04rem, 3.2vw, 1.2rem); color: green">âœ”</span></button>
                                <button type="button" hidden><svg xmlns="http://www.w3.org/2000/svg" fill="red" class="bi bi-x-lg"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                                </svg></button>
                            </div>
                        </form>
                        </li>
                    <% }; %>
                <% } %>
            </ul>
            <form id="create-note-form" action="/books/<%= book.id %>/notes/new" method="post">
                <h4 hidden>Add Note</h4>
                <textarea name="content" id="new-note-content" placeholder="Content" hidden required></textarea>
                <input type="number" name="page-number" placeholder="Page Number" min="1" hidden required>
                <button type="button">New Note</button>
                <div id="create-note-actions">
                    <button type="submit" hidden>Add</button>
                    <button type="button" hidden>Cancel</button>
                </div>
            </form>
        </div>
</div>


<%- include("partials/footer.ejs") %>