<%- include("partials/header.ejs") %>

<div class="wrapper">
    <span class="error-message"><%= %></span>
    <form action="/search" method="get" id="search-form"></form>
    <form class="form" id="create-form" action="/add" method="post">
        <h1>Add a New Book</h1>
        <div class="input-group">
            <label for="search">Search Book</label>
            <div id="search-book">
                <input type="text" id="search" name="search" dir="auto" placeholder="Enter title/ISBN" autocomplete="off" value="<%= locals.search_error ? search_error : locals.query ? query : '' %>">
                <button id="search-button" type="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search"
                    viewBox="0 0 16 16">
                    <path
                        d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                </svg></button>
            </div>
        </div>
        
        <div class="input-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" dir="auto" placeholder="Enter book title" value="<%= locals.title ? title : '' %>" required>
        </div>
        
        <div class="input-group">
            <label for="isbn">ISBN</label>
            <input type="text" id="isbn" name="isbn" placeholder="Enter ISBN" value="<%= locals.isbn ? isbn : '' %>" required>
        </div>
        
        <div class="input-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" dir="auto" placeholder="Enter book description" rows="6" required><%= locals.description ? description : '' %></textarea>
        </div>

        <div class="input-group">
            <label for="rating">Rating</label>
            <input type="number" id="rating" name="rating" placeholder="0 - 10" min="0" max="10" step="any" required>
        </div>
        
        <div class="input-group">
            <label for="review">Review</label>
            <textarea id="review" name="review" dir="auto" placeholder="Enter your review" rows="6" required></textarea>
        </div>

        <button type="submit">Add Book</button>
    </form>
</div>

<%- include("partials/footer.ejs") %>